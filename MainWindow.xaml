<Window x:Class="BluetoothManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:BluetoothManager.Converters"
        mc:Ignorable="d"
        Title="Bluetooth Manager" Height="500" Width="1000">
    <Window.Resources>
        <converters:StringNullOrEmptyToVisibilityConverter x:Key="StringNullOrEmptyToVisibilityConverter"/>
        <converters:ResourceStringConverter x:Key="ResourceStringConverter"/>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <Button x:Name="RefreshButton" Width="100" Height="30" Margin="0,0,10,0" Content="{Binding Source=ButtonRefresh, Converter={StaticResource ResourceStringConverter}}"/>
            <Grid Width="250" Height="30">
                <TextBox x:Name="SearchBox" VerticalContentAlignment="Center"/>
                <TextBlock Text="{Binding Source=SearchPlaceholder, Converter={StaticResource ResourceStringConverter}}"
                           Foreground="Gray"
                           VerticalAlignment="Center"
                           Margin="6,0,0,0"
                           IsHitTestVisible="False"
                           Visibility="{Binding Text, ElementName=SearchBox, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"/>
            </Grid>
            <Button x:Name="ClearSavedButton" Width="160" Height="30" Margin="10,0,0,0" Content="{Binding Source=ButtonClearSaved, Converter={StaticResource ResourceStringConverter}}"/>
        </StackPanel>

        <DataGrid x:Name="DevicesGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="False" CanUserAddRows="False" CellEditEnding="DevicesGrid_CellEditEnding">
            <DataGrid.Columns>
                <DataGridTextColumn Header="{Binding Source=ColumnName, Converter={StaticResource ResourceStringConverter}}" Binding="{Binding DisplayName}" Width="2*"/>
                <DataGridTextColumn Header="{Binding Source=ColumnFriendlyName, Converter={StaticResource ResourceStringConverter}}" Binding="{Binding FriendlyName}" Width="2*" IsReadOnly="True"/>
                <DataGridTextColumn Header="{Binding Source=ColumnStatus, Converter={StaticResource ResourceStringConverter}}" Binding="{Binding Status}" Width="1*" IsReadOnly="True"/>
                <DataGridTextColumn Header="MAC" Binding="{Binding MAC}" Width="1.2*" IsReadOnly="True"/>
                <DataGridTemplateColumn Header="{Binding Source=ColumnActions, Converter={StaticResource ResourceStringConverter}}" Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="{Binding Source=ButtonPair, Converter={StaticResource ResourceStringConverter}}" Margin="2" Padding="6,2" Click="Pair_Click"/>
                                <Button Content="{Binding Source=ButtonUnpair, Converter={StaticResource ResourceStringConverter}}" Margin="2" Padding="6,2" Click="Unpair_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock Grid.Row="2" x:Name="StatusText" Margin="0,10,0,0" TextWrapping="Wrap"/>
    </Grid>
</Window>